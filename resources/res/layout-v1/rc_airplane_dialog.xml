<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:fab="http://schemas.android.com/apk/com.getbase" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/mHolder" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/bar_image" android:layout_width="70dp" android:layout_height="match_parent" android:src="@drawable/rc_dotline_dialog"/>
    </LinearLayout>
    <com.obwhatsapp.yo.tf android:textSize="19dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/mTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/airplane_mode"/>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.obwhatsapp.yo.tf android:textSize="18dp" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="center" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="@string/yo_airplane_mode_warning"/>
    </LinearLayout>
    <LinearLayout android:gravity="end" android:layout_gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.obwhatsapp.yo.btn android:id="@+id/mDisable" android:background="@color/transparent" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/str0173"/>
        <com.obwhatsapp.yo.btn android:textColor="@color/black_alpha_87" android:id="@+id/mEnable" android:background="@color/transparent" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/yo_activate"/>
    </LinearLayout>
</LinearLayout>
