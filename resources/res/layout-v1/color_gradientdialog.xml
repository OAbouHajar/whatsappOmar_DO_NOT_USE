<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/div" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <com.obwhatsapp.yo.tf android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Color 1:"/>
            <ImageView android:id="@+id/flag" android:background="@drawable/transparentbackrepeat" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="10px" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@drawable/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/settings_divider_height"/>
        <RelativeLayout android:id="@+id/div2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <com.obwhatsapp.yo.tf android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Color 2:"/>
            <ImageView android:id="@+id/flag2" android:background="@drawable/transparentbackrepeat" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="10px" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View android:background="@drawable/list_divider" android:layout_width="match_parent" android:layout_height="@dimen/settings_divider_height"/>
        <RadioGroup android:id="@+id/rGroup" android:layout_width="275dp" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TOP_BOTTOM"/>
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEFT_RIGHT"/>
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DIAGONAL"/>
            <RadioButton android:id="@+id/radioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BOTTOM_TOP" android:layout_weight="1"/>
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RIGHT_LEFT" android:layout_weight="1"/>
        </RadioGroup>
        <ImageView android:id="@+id/flag3" android:background="@drawable/transparentbackrepeat" android:layout_width="match_parent" android:layout_height="48dp" android:layout_margin="3dp"/>
        <Button android:layout_gravity="right" android:id="@+id/ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/ok"/>
    </LinearLayout>
</RelativeLayout>
