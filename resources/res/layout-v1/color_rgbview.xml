<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="top|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:id="@+id/color_rgb_imgpreview" android:background="@drawable/transparentbackrepeat" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginRight="10px" android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.obwhatsapp.yo.tf android:id="@+id/color_rgb_tvRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R"/>
                <SeekBar android:id="@+id/color_rgb_seekRed" android:paddingLeft="10px" android:paddingRight="10px" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:minWidth="150px" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.obwhatsapp.yo.tf android:id="@+id/color_rgb_tvGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="G"/>
                <SeekBar android:id="@+id/color_rgb_seekGreen" android:paddingLeft="10px" android:paddingRight="10px" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:minWidth="150px" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.obwhatsapp.yo.tf android:id="@+id/color_rgb_tvBlue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="B"/>
                <SeekBar android:id="@+id/color_rgb_seekBlue" android:paddingLeft="10px" android:paddingRight="10px" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:minWidth="150px" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.obwhatsapp.yo.tf android:id="@+id/color_rgb_tvAlpha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="A"/>
                <SeekBar android:id="@+id/color_rgb_seekAlpha" android:paddingLeft="10px" android:paddingRight="10px" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="255" android:minWidth="150px" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
