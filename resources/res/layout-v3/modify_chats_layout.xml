<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:fab="http://schemas.android.com/apk/com.getbase" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText android:gravity="center_horizontal" android:id="@+id/mMessageEditText" android:padding="8dp" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="10dp" android:hint="Message" android:inputType="textMultiLine" android:textAlignment="center" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" android:weightSum="2">
        <Button android:id="@+id/mChangeTimeBtn" android:background="@drawable/custom_rounded_btn" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Time" android:drawableLeft="@drawable/ic_time" android:layout_weight="1" android:drawableStart="@drawable/ic_time" android:layout_marginEnd="10dp" style="?android:attr/buttonBarButtonStyle"/>
        <Button android:id="@+id/mChangeDateBtn" android:background="@drawable/custom_rounded_btn" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Date" android:drawableLeft="@drawable/ic_date" android:layout_weight="1" android:drawableStart="@drawable/ic_date" android:layout_marginStart="10dp" style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@drawable/message_bomber_shape" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <CheckBox android:id="@+id/mMarkAsSeen" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Mark as Seen" android:layout_marginStart="6dp"/>
        <CheckBox android:id="@+id/mMarkAsUnseen" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Mark as Unseen" android:layout_marginStart="6dp"/>
        <CheckBox android:id="@+id/mMarkAsRevokedV1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Mark as Revoked V1" android:layout_marginStart="6dp"/>
        <CheckBox android:id="@+id/mMarkAsRevokedV2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Mark as Revoked V2" android:layout_marginStart="6dp"/>
        <CheckBox android:id="@+id/mUndoMarkAsRevokedV2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:text="Undo Mark as Revoked V2" android:layout_marginStart="6dp"/>
    </LinearLayout>
</LinearLayout>
