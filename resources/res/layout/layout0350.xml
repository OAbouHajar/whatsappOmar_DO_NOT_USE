<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:id="@+id/upi_id_details_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:background="@color/color065f" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.obwhatsapp.WaImageView android:id="@+id/avatar" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="16dp" android:src="@drawable/avatar_contact" android:scaleType="center" android:contentDescription="@string/str1c3c"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp">
                <com.obwhatsapp.WaTextView android:textSize="16sp" android:textColor="@color/color0660" android:id="@+id/vpa_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str0fd4"/>
                <com.obwhatsapp.CopyableTextView android:textSize="16sp" android:textColor="@color/color06c5" android:id="@+id/account_id_handle" android:layout_width="wrap_content" android:layout_height="wrap_content" app:attr0540="@string/str1b1d"/>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/payment_separator" android:background="@drawable/list_separator_top" android:layout_width="match_parent" android:layout_height="@dimen/dimen05fe"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/send_and_request_payment_container" android:background="@color/color065f" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/send_payment_container" android:background="@drawable/selector_orange_gradient" android:paddingLeft="@dimen/dimen0457" android:layout_width="match_parent" android:layout_height="@dimen/dimen0459">
                <com.obwhatsapp.WaTextView android:textSize="16sp" android:textColor="@color/color0660" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str10d2"/>
            </LinearLayout>
            <View android:id="@+id/send_request_divider_view" android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/request_payment_container" android:background="@drawable/selector_orange_gradient" android:paddingLeft="@dimen/dimen0457" android:layout_width="match_parent" android:layout_height="@dimen/dimen0459">
                <com.obwhatsapp.WaTextView android:textSize="16sp" android:textColor="@color/color0660" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str143f"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@drawable/list_separator_top" android:layout_width="match_parent" android:layout_height="@dimen/dimen05fe"/>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/block_vpa_btn" android:background="@color/color065f" android:paddingLeft="@dimen/dimen0457" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen0459">
            <com.obwhatsapp.WaImageView android:id="@+id/block_vpa_icon" android:layout_width="@dimen/dimen074c" android:layout_height="@dimen/dimen074c" android:layout_marginRight="@dimen/dimen074b" android:src="@drawable/ic_spam_block" android:scaleType="center" android:contentDescription="@string/str0226"/>
            <com.obwhatsapp.WaTextView android:textSize="17sp" android:id="@+id/block_vpa_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str0226"/>
        </LinearLayout>
        <com.obwhatsapp.WaImageView android:layout_gravity="center_horizontal" android:layout_marginTop="16dp" style="@style/style01f6"/>
    </LinearLayout>
</ScrollView>
