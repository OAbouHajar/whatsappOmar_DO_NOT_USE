<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/selector_orange_gradient" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.obwhatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/payment_recipient_profile_pic" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="16dp" android:src="@drawable/avatar_contact" android:scaleType="fitCenter" android:contentDescription="@string/str1d6a"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/payment_recipient_info_container" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" android:layout_weight="1">
                <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color06c5" android:ellipsize="end" android:id="@+id/payment_recipient_direction_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str052a" android:singleLine="true"/>
                <com.obwhatsapp.WaTextView android:textSize="16sp" android:ellipsize="end" android:id="@+id/payment_recipient_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/style01bc"/>
                <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color06c5" android:ellipsize="end" android:id="@+id/payment_recipient_vpa" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
            </LinearLayout>
            <com.obwhatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/expand_receiver_details_button" android:paddingLeft="16dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right" android:contentDescription="@string/str1356"/>
        </LinearLayout>
        <View android:id="@+id/divider" android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="72dp"/>
    </LinearLayout>
</merge>
