<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/title_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/contact_info_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/transaction_amount_info_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/payment_to_merchant_options_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.obwhatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/payment_to_merchant_options_icon" android:padding="5dp" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="16dp" android:src="@drawable/cart" android:scaleType="fitXY" app:attr0532="#ff128c7e"/>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color06c5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str0fca" style="@style/style01bc"/>
                    <com.obwhatsapp.WaTextView android:textSize="16sp" android:ellipsize="end" android:id="@+id/payment_to_merchant_options" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/style01bc"/>
                </LinearLayout>
                <com.obwhatsapp.WaImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right"/>
            </LinearLayout>
            <View android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/payment_method_container" android:background="@drawable/selector_orange_gradient" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.obwhatsapp.payments.ui.widget.PaymentMethodRow android:id="@+id/payment_method_row" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.obwhatsapp.WaImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/expand_details_button" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right" android:contentDescription="@string/str0f56"/>
        </FrameLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/transaction_description_container" android:background="@drawable/selector_orange_gradient" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.obwhatsapp.payments.ui.widget.PaymentDescriptionRow android:id="@+id/payment_description_row" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.obwhatsapp.WaImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/expand_description_button" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right" android:contentDescription="@string/str0f56"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/payment_rails_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
            <LinearLayout android:orientation="horizontal" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="72dp">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color06c5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str0528" style="@style/style01bc"/>
                    <com.obwhatsapp.WaTextView android:textSize="16sp" android:ellipsize="end" android:id="@+id/payment_rails_label" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str0f9a" android:singleLine="true" style="@style/style01bc"/>
                </LinearLayout>
                <com.obwhatsapp.WaImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/chevron_right"/>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/education_divider" android:background="@drawable/payments_divider_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
        <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color06c5" android:id="@+id/education" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" app:attr028d="sans-serif"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/extra_info_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="16dp" android:layout_marginRight="10dp" android:layout_marginBottom="16dp">
            <com.obwhatsapp.components.Button android:id="@+id/confirm_payment" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/str0522" style="@style/style03a2"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/confirm_payment_progressbar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/footer_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
