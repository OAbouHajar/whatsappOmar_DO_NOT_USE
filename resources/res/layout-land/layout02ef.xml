<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">
        <FrameLayout android:id="@+id/map_holder" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.obwhatsapp.WaImageView android:id="@+id/my_location" android:background="@drawable/map_button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/btn_myl" android:scaleType="center" android:layout_alignParentRight="true" android:contentDescription="@string/str0d7d" app:attr0532="@color/color04d2"/>
        <com.obwhatsapp.WaImageView android:id="@+id/zoom_out" android:background="@drawable/map_button_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/btn_locations_zoom_reset" android:scaleType="center" android:layout_below="@+id/my_location" android:layout_alignParentRight="true" android:contentDescription="@string/str0c88"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/status_panel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.obwhatsapp.WaImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/shadow_send_location" android:scaleType="fitXY"/>
            <com.obwhatsapp.WaTextView android:textSize="14sp" android:textColor="@color/color0520" android:gravity="center" android:id="@+id/status" android:background="@color/color051f" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.obwhatsapp.WaImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/shadow_send_location_landscape" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.5">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/user_list" android:paddingTop="1dp" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/landscape_selected_list_holder" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:id="@+id/selected_list_title_holder" android:background="@color/left" android:paddingLeft="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp">
                <com.obwhatsapp.WaImageView android:layout_gravity="center_vertical" android:id="@+id/selected_cancel" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="26dp" android:src="@drawable/btn_cancel" android:scaleType="centerInside" android:contentDescription="@string/str1c24" app:attr0532="@color/color090b"/>
                <com.obwhatsapp.WaTextView android:textSize="16sp" android:textColor="@color/color090b" android:layout_gravity="center_vertical" android:id="@+id/selected_list_title" android:focusable="false" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/style027b"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/selected_list" android:background="@color/color065f" android:paddingTop="1dp" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
